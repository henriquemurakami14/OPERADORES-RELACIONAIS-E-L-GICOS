programa
{
	
inclua biblioteca Texto --> t
	funcao inicio()
	{
		cadeia letra

		escreva("Digite uma letra para descobrir se ela é Vogal ou Consoante: ")
		leia(letra)
		
		letra = t.extrair_subtexto(letra, 0, 1)
		letra = t.caixa_baixa(letra)
		
		se (letra == "a" ou letra == "e" ou letra == "i" ou letra == "o" ou letra == "u"){
			escreva("A letra inicial digitada (", letra, ") é uma vogal.")
		}
		senao{ 
			escreva("A letra inicial digitada (", letra, ") é uma consoante.")
		}
		
	}
}
